datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  role         Role @default(user)
  active       Boolean
}

enum Role {
  user
  admin
}